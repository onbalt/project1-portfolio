mixin menu__list(list)
    ul.menu__list
        each item in list
            li.menu__item
                a.menu__link(class={menu__link_active: pageLink === item.link} class=("#{pageAlias}" === "#{item.link}") ? "menu__link_active" : "" href=item.link)= item.name

mixin footer-menu__list(list)
    ul.footer-menu__list
        each item in list
            li.footer-menu__item
                a.footer-menu__link(class={"footer-menu__link_active": pageLink === item.link} class=("#{pageAlias}" === "#{item.link}") ? "footer-menu__link_active" : "" href=item.link)= item.name

mixin index-menu__list(list)
    ul.index-menu__list
        each item in list
            li.index-menu__item
                a.index-menu__link(href=item.link)= item.name
